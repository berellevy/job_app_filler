{
  "manifest_version": 3,
  "name": "Job App Filler",
  "description": "The Best Autofill Since Sliced Bread.",
  "version": "2.1.0",
  "action": {
    "default_icon": "logo.png",
    "default_title": "Job App Filler",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "js": [
        "contentScript.js"
      ],
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.myworkdaysite.com/*",
        "https://*.greenhouse.io/*"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.myworkdaysite.com/*",
        "https://*.greenhouse.io/*"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}