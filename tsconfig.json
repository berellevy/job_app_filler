{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@src/*": ["./*"]
        },
        "jsx": "react",
        "module": "ES2022",
        "target": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,

    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/**/*.tsx"],
    "exclude": ["node_modules"]
}