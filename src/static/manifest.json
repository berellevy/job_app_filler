{
  "manifest_version": 3,
  "name": "Job App Filler",
  "description": "Elevated Autofill for Annoying Job Sites",
  "version": "1.0.8",
  "action": {
    "default_icon": "logo.png",
    "default_title": "Job App Filler",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "js": [
        "contentScript.js"
      ],
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.myworkdaysite.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.myworkdaysite.com/*"

      ]
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}